<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag 'provider_id', @provider.id %>

  <div class="input-field col s12">
    <%= f.text_field :name %>
    <label for="name">Nombre</label>
  </div>

  <div class="input-field col s4">
    <%= f.text_field :price %>
    <label for="price">Precio</label>
  </div>

  <div class="input-field col s4">
    <%= f.text_field :weight %>
    <label for="weight">Peso por Unidad</label>
  </div>


  <div class="input-field col s4">
    <%= f.text_field :min_order_quantity %>
    <label for="min_order_quantity">Cantidad de Orden Minima</label>
  </div>

  <div class="input-field col s6">
    <div class="chips chips-initial" id="categories"></div>
  </div>

  <input type="hidden" id="category_list" name="categorias" value="" />

  <div class="actions">
    <%= button_tag "Alta", :id => "submit", :class => "waves-effect waves-light btn-large"%>
  </div>
<% end %>
